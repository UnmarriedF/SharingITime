<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="radioButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="register_button">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_login_button</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">@dimen/button_margin_48</item>
        <item name="android:layout_marginEnd">@dimen/button_margin_48</item>
    </style>
    <style name="register_edit_text">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#000000</item>
    </style>

    <declare-styleable name="CircleHead">
        <attr name="circleBorderHeadWidth" format="dimension" />
        <attr name="ringHeadColor" format="color" />
    </declare-styleable>
    <style name="take_photo_anim" parent="Animation.AppCompat.DropDownUp">
        <item name="android:windowEnterAnimation">@anim/popwindow_exit</item>
        <item name="android:windowExitAnimation">@anim/popwindow_show</item>
    </style>

</resources>
