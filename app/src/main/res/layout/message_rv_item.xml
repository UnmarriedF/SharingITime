<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_unread"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/civ_head"
        android:layout_alignTop="@+id/civ_head"
        android:src="@drawable/ic_brightness_1_black_24dp" />
    <TextView
        android:visibility="gone"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="1"
        android:textSize="12sp"
        android:id="@+id/tv_message_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/iv_unread"
        android:layout_alignStart="@+id/iv_unread" />


    <com.fanbo.sharingitime.widget.CircleImageView
        android:id="@+id/civ_head"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_head"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/civ_head"
        android:text="SharingITime"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/civ_head"
        android:text="未读消息"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginEnd="10dp"
        android:text="日期" />
</RelativeLayout>