<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fanbo.sharingitime.activity.fragment.ShareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/ic_person_add_black_24dp" />

        <com.fanbo.sharingitime.widget.TabGroup
            android:id="@+id/rg_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rbtn_hot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="热门" />

            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rbtn_concert"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="关注" />

            <RadioButton
                android:textSize="18sp"
                android:id="@+id/rbtn_commend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="同城" />

        </com.fanbo.sharingitime.widget.TabGroup>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_make_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/ic_add_a_photo_black_24dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
